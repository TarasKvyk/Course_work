@model ShoppingCart

<form method="post">
    <input asp-for="BookId" hidden />
    <div class="card shadow border-0 mt-4 mb-4">
        <div class="card-header bg-secondary bg-gradient text-light py-4">
            <div class="row">
                <div class="col-12 text-center">
                    <h3 class="text-white text-uppercase">@Model.Book.Title</h3>
                    <p class="text-white-50 fw-semibold mb-0">by @Model.Book.Author.Name</p>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="py-3">
                <div class="row">
                    <div class="col-6 col-md-2 offset-lg-1 pb-1">
                        <a asp-action="Index" class="btn btn-outline-primary bg-gradient mb-5 fw-semibold btn-sm text-uppercase">
                            <small>Back home</small>
                        </a>
                    </div>
                </div>

                <div class="row">                    
                    <div class="col-12 col-lg-3 offset-lg-1 text-center mb-3">
                        <img src="@Model.Book.ImageUrl" class="d-block w-100" alt="...">

