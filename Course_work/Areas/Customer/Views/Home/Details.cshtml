                                <div>@Model.Product.Price50.ToString("c")</div>
                            </div>
                            <div class="p-1 col-3 col-lg-2 bg-white text-warning fw-bold">
                                <div>@Model.Product.Price100.ToString("c")</div>
                            </div>
                        </div>*@

                        <div class="py-2 col-12">
                            <label asp-for="Book.Description" class="ms-2 text-muted"></label>
                            <textarea asp-for="Book.Description" disabled class="form-control border-0 shadow">@Html.Raw(Model.Book.Description)</textarea>
                        </div>

                        <div class="py-2 col-12">
                            <label asp-for="Book.Category.CategoryDescrition" class="ms-2 text-muted"></label>
                            <textarea asp-for="Book.Description" disabled class="form-control border-0 shadow">@Html.Raw(Model.Book.Category.CategoryDescrition)</textarea>
                        </div>

                        <div class="row pt-2">
                            <h6 class="text-dark text-opacity-50  pb-2">
                                Year:
                                <span>
                                    @Model.Book.Year
                                </span>
                            </h6>                            
                            <h6 class="text-dark text-opacity-50  pb-2">
                                Language:
                                <span>
                                    @System.Globalization.CultureInfo.GetCultureInfoByIetfLanguageTag(Model.Book.Language).EnglishName
                                </span>
                            </h6>
                        </div>

                        <div class="row pl-2 mt-2 mb-1">
                            <div class="col-md-4">
                                <div class="input-group col-3 mb-3">
                                    <span class="input-group-text bg-primary text-white shadow border-0 fw-semibold"
                                          id="inputGroup-sizing-default">
                                        Count
                                    </span>
                                    <input asp-for="Count" type="number" value="1" class="form-control shadow p-1 border-0 text-end"
                                           aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" />

                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12 col-md-6 pt-2 pb-1">
                                <button type="submit"
                                        class="btn btn-primary bg-gradient  w-100 py-2 text-uppercase fw-semibold">
                                    Add to Cart
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>