                    </div>

                    <div class="col-6 col-lg-6 offset-lg-1">
                      
                        @*<div class="py-2 col-12">
                            <label asp-for="Description" class="ms-2 text-muted"></label>
                            <textarea asp-for="Description" disabled class="form-control border-0 shadow">@Html.Raw(Model.Book.Description)</textarea>
                        </div>*@

                        <div class="row pt-2">
                            <h6 class="text-dark text-opacity-50 pb-2">
                                Bith Date:
                                <span>
                                    @Model.Author.BirthDate.ToShortDateString()
                                </span>
                            </h6>                            
                            <h6 class="text-dark text-opacity-50  pb-2">
                                Country:
                                <span>
                                    @Model.Country
                                </span>
                            </h6>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>